{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://richmondgeneral.com/schemas/square-runtime-profile.schema.json",
  "title": "Square Runtime Profiles",
  "type": "object",
  "required": [
    "version",
    "profiles"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "profiles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "description",
          "default_mode",
          "allowed_modes"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$"
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "default_mode": {
            "type": "string",
            "enum": [
              "WEB_SAFE",
              "LOCAL_STANDARD",
              "LOCAL_PRIVILEGED"
            ]
          },
          "allowed_modes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": [
                "WEB_SAFE",
                "LOCAL_STANDARD",
                "LOCAL_PRIVILEGED"
              ]
            },
            "uniqueItems": true
          }
        }
      }
    }
  }
}
